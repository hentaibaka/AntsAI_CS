<Window x:Class="AntsAI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AntsAI" ResizeMode="NoResize" Height="720" Width="1280" >
    <Grid x:Name="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>
        <Canvas x:Name="MainCanvas" Grid.Column="0" Background="#000000" MouseDown="MainCanvas_MouseDown" Grid.ColumnSpan="2" Margin="0,0,199.6,0.4" />
        <Grid Grid.Column="1" Background="White" ZIndex="10">
            <Grid x:Name="ControlsGrid" Grid.Column="1" VerticalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <TextBlock x:Name="AntsText" Grid.Row="0" Text="Ants: 1500" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
                <Slider x:Name="AntsSlider" Grid.Row="1" Width ="150" Height="25" Minimum="1" Maximum="3500" Value="1500" ValueChanged="AntsSlider_ValueChanged"></Slider>
                <TextBlock x:Name="RadiusText" Grid.Row="2" Text="Radius: 40" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
                <Slider x:Name="RadiusSlider" Grid.Row="3" Width ="150" Height="25"  Minimum="15" Maximum="100" Value="40" ValueChanged="RadiusSlider_ValueChanged"></Slider>
                <Button x:Name="HomeButton" Grid.Row="4" Width="120" Height="30" Margin="5" Background="Blue" Content="Home" Click="BaseButton_Click"></Button>
                <Button x:Name="FoodButton" Grid.Row="5" Width="120" Height="30" Margin="5" Background="Red" Content="Food" Click="BaseButton_Click"></Button>
                <Button x:Name="BorderButton" Grid.Row="6" Width="120" Height="30" Margin="5" Background="Gray" Content="Border" Click="BaseButton_Click"></Button>
                <Button x:Name="StartButton" Grid.Row="7" Width="120" Height="30" Margin="5" Background="Green" Content="Start" Click="StartButton_Click"></Button>
                <TextBlock x:Name="TextFPS" Grid.Row="8" VerticalAlignment="Center" HorizontalAlignment="Center" Text="----"></TextBlock>
                <TextBlock x:Name="TextCounter" Grid.Row="9" VerticalAlignment="Center" HorizontalAlignment="Center" Text="----"></TextBlock>
            </Grid>
        </Grid>
    </Grid>
</Window>